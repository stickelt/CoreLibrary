<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>Stickelt.CoreLibrary</PackageId>
    <Version>1.0.0</Version>
    <Authors>Tom Stickel</Authors>
    <Company>Witcher</Company>
    <Description>A core library containing shared interfaces and base functionality for .NET applications</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

       <!-- Adding some additional useful NuGet package properties -->
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/stickelt/CoreLibrary</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <ItemGroup>
    <!-- Include Directory.Packages.props in the NuGet package -->
    <None Include="..\Directory.Packages.props" Pack="true" PackagePath="contentFiles/any/any/" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Notice no version numbers here - they come from Directory.Packages.props -->
    <PackageReference Include="Dapper" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Polly" />
    <PackageReference Include="Serilog" />
  </ItemGroup>
</Project>
